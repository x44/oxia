{
  "scopeName": "style.injection.oxia",
  "injectionSelector": "L:source.tsx.oxia - (comment | string)",
  "patterns": [
    {
      "begin": "(<)(style)\\b([^>]*)(>)",
      "end": "(</)(style)(>)",
      "beginCaptures": {
        "0": { "name": "meta.tag.style.html" },
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.style.html" },
        "3": { "name": "meta.tag.attributes.html" },
        "4": { "name": "punctuation.definition.tag.end.html" }
      },
      "endCaptures": {
        "0": { "name": "meta.tag.style.html" },
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.style.html" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "contentName": "meta.embedded.block.css",
      "patterns": [
        {
          "comment": "Template literal expressions - exclude from CSS",
		  "include": "source.tsx.oxia"
        },
        {
          "comment": "Regular CSS content",
          "include": "source.css"
        }
      ]
    }
  ]
}